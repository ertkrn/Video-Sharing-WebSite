                                            </ul>
                                        </div><!-- /btn-group -->
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-2 col-sm-4 hidden-xs">
                            @if (mmbr != null)
                            {
                                <div class="avatar pull-left">
                                    <img src="~/Content/Photos/avatar.png" alt="avatar">
                                    <span class="status"></span>
                                </div>
                                <div class="selectuser pull-left">
                                    <div class="btn-group pull-right dropdown">
                                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            @mmbr.Name
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="/giris-yap">Hesabım</a></li>
                                            <li><a href="/Home/Logout">Çıkış Yap</a></li>
                                        </ul>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="loginsignup pull-right">
                                    <a href="/giris-yap">Giriş Yap</a> . <a href="/kayit-ol">Ücretsiz Kayıt</a>
                                </div>
