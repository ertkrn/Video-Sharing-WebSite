                        </div>
                    </div>
                    <div class="hidden-xs">
                        <a href="/video-yukle">
                            <div class="upload-button">
                                <i class="cv cvicon-cv-upload-video"></i>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /logo -->

